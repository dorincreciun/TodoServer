# ========================================
# CONFIGURARE TESTING
# ========================================
NODE_ENV=test
PORT=3001
API_VERSION=v1
API_PREFIX=/api

# ========================================
# CONFIGURARE CORS PENTRU TESTING
# ========================================
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173

# ========================================
# CONFIGURARE MONGODB PENTRU TESTING
# ========================================
MONGODB_URI=mongodb://localhost:27017/todo-list-test
MONGODB_OPTIONS_RETRY_WRITES=false
MONGODB_OPTIONS_W=1

# ========================================
# CONFIGURARE REDIS PENTRU TESTING
# ========================================
REDIS_URL=redis://localhost:6379/1
REDIS_PASSWORD=
REDIS_DB=1

# ========================================
# CONFIGURARE JWT PENTRU TESTING
# ========================================
JWT_SECRET=test-jwt-secret-key-for-testing-purposes-only-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=test-jwt-refresh-secret-key-for-testing-purposes-only-minimum-32-characters
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=todo-list-api-test
JWT_AUDIENCE=todo-list-users-test

# ========================================
# CONFIGURARE RATE LIMITING PENTRU TESTING
# ========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Rate limiting pentru autentificare
AUTH_RATE_LIMIT_WINDOW_MS=60000
AUTH_RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# CONFIGURARE SECURITATE PENTRU TESTING
# ========================================
BCRYPT_ROUNDS=4
SESSION_SECRET=test-session-secret-key-for-testing
COOKIE_SECRET=test-cookie-secret-key-for-testing

# Configurare Helmet
HELMET_CONTENT_SECURITY_POLICY=false
HELMET_HIDE_POWERED_BY=true
HELMET_HSTS_MAX_AGE=31536000

# ========================================
# CONFIGURARE LOGGING PENTRU TESTING
# ========================================
LOG_LEVEL=error
LOG_FILE_PATH=logs/test
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# ========================================
# CONFIGURARE EMAIL PENTRU TESTING
# ========================================
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=test
SMTP_PASS=test
EMAIL_FROM=test@todolist.com

# ========================================
# CONFIGURARE UPLOAD PENTRU TESTING
# ========================================
UPLOAD_MAX_SIZE=1048576
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png
UPLOAD_PATH=uploads/test

# ========================================
# CONFIGURARE CACHE PENTRU TESTING
# ========================================
CACHE_TTL=60
CACHE_CHECK_PERIOD=120

# ========================================
# CONFIGURARE MONITORING PENTRU TESTING
# ========================================
ENABLE_METRICS=false
METRICS_PORT=9091

# ========================================
# CONFIGURARE TESTING
# ========================================
TEST_DATABASE_URI=mongodb://localhost:27017/todo-list-test
TEST_REDIS_URL=redis://localhost:6379/1 