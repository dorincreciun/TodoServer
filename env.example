# ========================================
# CONFIGURARE SERVER
# ========================================
PORT=3000
NODE_ENV=development
API_VERSION=v1
API_PREFIX=/api

# ========================================
# CONFIGURARE CORS
# ========================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# ========================================
# CONFIGURARE IP FILTERING
# ========================================
# Lista de IP-uri permise (separate prin virgulă, lăsați gol pentru a permite toate)
# Exemplu: ALLOWED_IPS=127.0.0.1,192.168.1.1,*
ALLOWED_IPS=

# ========================================
# CONFIGURARE MONGODB
# ========================================
MONGODB_URI=mongodb://localhost:27017/todo-list
MONGODB_OPTIONS_RETRY_WRITES=true
MONGODB_OPTIONS_W=majority

# ========================================
# CONFIGURARE REDIS
# ========================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ========================================
# CONFIGURARE JWT
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production-minimum-32-characters
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=todo-list-api
JWT_AUDIENCE=todo-list-users

# ========================================
# CONFIGURARE RATE LIMITING
# ========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Rate limiting pentru autentificare
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# ========================================
# CONFIGURARE SECURITATE
# ========================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-super-secret-session-key
COOKIE_SECRET=your-super-secret-cookie-key

# Configurare Helmet
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_HIDE_POWERED_BY=true
HELMET_HSTS_MAX_AGE=31536000

# ========================================
# CONFIGURARE LOGGING
# ========================================
LOG_LEVEL=info
LOG_FILE_PATH=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# ========================================
# CONFIGURARE EMAIL
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@todolist.com

# ========================================
# CONFIGURARE UPLOAD
# ========================================
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=uploads

# ========================================
# CONFIGURARE CACHE
# ========================================
CACHE_TTL=300
CACHE_CHECK_PERIOD=600

# ========================================
# CONFIGURARE MONITORING
# ========================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ========================================
# CONFIGURARE TESTING
# ========================================
TEST_DATABASE_URI=mongodb://localhost:27017/todo-list-test
TEST_REDIS_URL=redis://localhost:6379/1 